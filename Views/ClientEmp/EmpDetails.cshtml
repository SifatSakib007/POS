@model POS.Models.Users

<div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg overflow-hidden mt-10">
    <div class="p-6">
        <h2 class="text-3xl font-bold text-gray-800 mb-2">Employee Details</h2>
        <p class="text-gray-600 mb-6">Here are the details for the selected employee.</p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-gray-100 p-4 rounded-lg">
                <h3 class="text-xl font-semibold text-gray-700">Personal Information</h3>
                <p class="mt-2"><strong>ব্যবহারকারীর নাম:</strong> @Model.UserName</p>
                <p class="mt-2"><strong>দোকানের নাম:</strong> @Model.ShopName</p>
                <p class="mt-2"><strong>ঠিকানা:</strong> @Model.Address</p>
                <p class="mt-2"><strong>ইমেইল:</strong> @Model.Email</p>
                <p class="mt-2"><strong>ফোন নম্বর:</strong> @Model.PhoneNo</p>
                <p class="mt-2"><strong>পদবি:</strong> @Model.Role ?? "N/A"</p>
                <p class="mt-2"><strong>স্থিতি:</strong> @Model.Status</p>
            </div>

            <div class="bg-gray-100 p-4 rounded-lg">
                <h3 class="text-xl font-semibold text-gray-700">Account Information</h3>
                <p class="mt-2"><strong>পাসওয়ার্ড:</strong> @Model.Password (Hidden for security)</p>
                <p class="mt-2"><strong>নিবন্ধন তারিখ:</strong> @Model.CreatedAt?.ToString("dd-MM-yyyy")</p>
                <p class="mt-2"><strong>অবসান তারিখ:</strong> @Model.DeletedAt?.ToString("dd-MM-yyyy") ?? "N/A"</p>
                <p class="mt-2"><strong>কর্মচারী আইডি:</strong> @Model.EmployeeId ?? "N/A"</p>
            </div>
        </div>

        <div class="mt-6 flex justify-end">
            <a href="@Url.Action("Edit", "ClientEmp", new { id = Model.UserId })" class="bg-yellow-500 text-white py-2 px-4 rounded hover:bg-yellow-600">Edit Employee</a>
            <a href="@Url.Action("Index", "ClientEmp")" class="ml-4 bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Back to Employee List</a>
        </div>
    </div>
</div>
