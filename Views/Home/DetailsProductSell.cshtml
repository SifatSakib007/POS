@model POS.Models.Sell

<div class="p-8 bg-gray-100 min-h-screen flex justify-center items-center">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden w-full max-w-4xl">
        <!-- Header -->
        <div class="p-6 border-b border-gray-200 flex justify-between items-center">
            <div>
                <h1 class="text-2xl font-bold text-gray-700">INVOICE</h1>
                <p class="text-gray-500 mt-2">@Model.Invoice</p>
            </div>
            <div class="text-right">
                <p class="font-medium text-gray-600">Date: @DateTime.Now.ToString("yyyy-MM-dd")</p>
                <p class="font-medium text-gray-600">Customer ID: @Model.CustomerId</p>
            </div>
        </div>

        <!-- Company & Customer Info -->
        <div class="p-6 border-b border-gray-200 grid grid-cols-2 gap-4">
            <div>
                <h2 class="text-gray-700 font-semibold">BILL TO</h2>
                <p class="text-gray-600">@Model.CustomerName</p>
                <p class="text-gray-600">@Model.CustomerAddress</p>
                <p class="text-gray-600">@Model.CustomerPhoneNo</p>
            </div>
            <div>
                <h2 class="text-gray-700 font-semibold">SHIP TO</h2>
                <p class="text-gray-600">@Model.CustomerName</p>
                <p class="text-gray-600">@Model.CustomerAddress</p>
                <p class="text-gray-600">@Model.CustomerPhoneNo</p>
            </div>
        </div>

        <!-- Itemized Details -->
        <div class="p-6 border-b border-gray-200">
            <div class="grid grid-cols-3 gap-4 mb-4">
                <div class="col-span-2 font-semibold text-gray-600">DESCRIPTION</div>
                <div class="text-right font-semibold text-gray-600">TOTAL</div>
            </div>
            <div class="grid grid-cols-3 gap-4 mb-4">
                <div class="col-span-2">
                    <p>Product Name: @Model.ProductName</p>
                    @* <p>Buy Price: @Model.BuyPrice</p> *@
                    <p>Quantity: @Model.Quantities</p>
                </div>
                <div class="text-right">
                    <p>@Model.TotalPricePerProduct</p>
                </div>
            </div>
        </div>

        <!-- Summary -->
        <div class="p-6 border-b border-gray-200">
            <div class="grid grid-cols-2 gap-4">
                <div class="text-right font-semibold text-gray-600">Subtotal</div>
                <div class="text-right">@Model.TotalTotalPrice</div>
                <div class="text-right font-semibold text-gray-600">Tax</div>
                <div class="text-right">--</div>
                <div class="text-right font-semibold text-gray-600">Shipping/Handling</div>
                <div class="text-right">--</div>
                <div class="text-right font-semibold text-gray-600">Total</div>
                <div class="text-right font-bold text-gray-900">@Model.TotalTotalPrice</div>
            </div>
        </div>

        <!-- Additional Information -->
        <div class="p-6 border-b border-gray-200">
            <p class="font-semibold text-gray-600">Remarks / Instructions:</p>
            <p class="text-gray-600">Please make payment by the due date. Contact us for any questions.</p>
        </div>

        <!-- Footer -->
        <div class="p-6 text-center">
            <p class="text-gray-600">Thank you for your business!</p>
            <p class="text-gray-500 text-sm mt-2">For questions concerning this invoice, please contact</p>
        </div>
    </div>
</div>
