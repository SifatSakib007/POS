@model POS.Models.Product

<div class="font-[sans-serif] bg-white">
    <div class="max-w-4xl w-full h-max rounded-md px-4 py-8 mx-auto">
        <h2 class="text-2xl font-bold mb-6">নতুন পণ্য যোগ করুন</h2>
        <form asp-action="ProductBuy" method="post">
            @Html.AntiForgeryToken()


            <!-- Product Name -->
            <div class="relative flex items-center sm:col-span-2 mt-4">
                <label for="ProductName" class="text-[13px] bg-white text-black absolute px-2 top-[-10px] left-[18px] flex align-items-center gap-1">পণ্যের নাম <span class="text-red-500 text-xl">*</span></label>
                <input asp-for="ProductName" placeholder="ব্যবহারকারীর নাম লিখুন" class="px-4 py-3.5 bg-white text-black w-full text-sm border-2 border-gray-100 focus:border-blue-500 rounded outline-none" />
            </div>
            <span asp-validation-for="ProductName" class="text-red-500 text-sm"></span>
           

            <!-- Buy Price -->

            <div class="relative flex items-center sm:col-span-2 mt-4">
                <label for="BuyPrice" class="text-[13px] bg-white text-black absolute px-2 top-[-10px] left-[18px] flex align-items-center gap-1">ক্রয়মূল্য <span class="text-red-500 text-xl">*</span></label>
                <input asp-for="BuyPrice" placeholder="ক্রয়মূল্য লিখুন" type="number" class="px-4 py-3.5 bg-white text-black w-full text-sm border-2 border-gray-100 focus:border-blue-500 rounded outline-none" />
            </div>
            <span asp-validation-for="BuyPrice" class="text-red-500 text-sm"></span>

           

            <!-- Previous Buy Price (optional) -->


            <div class="relative flex items-center sm:col-span-2 mt-4">
                <label for="PreviousBuyPrice" class="text-[13px] bg-white text-black absolute px-2 top-[-10px] left-[18px] flex align-items-center gap-1">পূর্বের ক্রয়মূল্য <span class="text-red-500 text-xl">*</span></label>
                <input asp-for="PreviousBuyPrice" placeholder="পূর্বের ক্রয়মূল্য লিখুন" type="number" class="px-4 py-3.5 bg-white text-black w-full text-sm border-2 border-gray-100 focus:border-blue-500 rounded outline-none" />
            </div>
            <span asp-validation-for="PreviousBuyPrice" class="text-red-500 text-sm"></span>


            <!-- Stock -->

            <div class="relative flex items-center sm:col-span-2 mt-4">
                <label for="Stock" class="text-[13px] bg-white text-black absolute px-2 top-[-10px] left-[18px] flex align-items-center gap-1">স্টক সংখ্যা<span class="text-red-500 text-xl">*</span></label>
                <input asp-for="Stock" placeholder="স্টক সংখ্যা" type="number" class="px-4 py-3.5 bg-white text-black w-full text-sm border-2 border-gray-100 focus:border-blue-500 rounded outline-none" />
            </div>
            <span asp-validation-for="Stock" class="text-red-500 text-sm mb-4"></span>


            <!-- Submit Button -->
            <div class="flex justify-between items-center mt-6">
                <button type="submit" class="rounded-md px-6 py-3 w-full text-sm tracking-wide bg-blue-600 hover:bg-blue-700 text-white">
                    পণ্য যোগ করুন
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
