@model POS.Models.Product

<h2 class="text-2xl font-bold mb-4">Update Stock for @Model.ProductName</h2>

<form asp-action="UpdateProductStock" method="post" class="space-y-6">

    <!-- Product Name (Read-Only) -->
    <div class="mb-4">
        <label for="ProductName" class="block text-sm font-medium text-gray-700">Product Name</label>
        <input type="text" id="ProductName" name="ProductName" value="@Model.ProductName"
               class="w-full px-4 py-2 border rounded-md bg-gray-100" readonly />
    </div>

    <!-- Previous Buy Price (Read-Only) -->
    <div class="mb-4">
        <label for="PreviousBuyPrice" class="block text-sm font-medium text-gray-700">Previous Buy Price</label>
        <input type="text" id="PreviousBuyPrice" name="PreviousBuyPrice" value="@Model.PreviousBuyPrice"
               class="w-full px-4 py-2 border rounded-md bg-gray-100" readonly />
    </div>

    <!-- New Buy Price -->
    <div class="mb-4">
        <label for="BuyPrice" class="block text-sm font-medium text-gray-700">New Buy Price</label>
        <input type="number" id="BuyPrice" name="BuyPrice" step="0.01" value="@Model.BuyPrice"
               class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
               required />
        <span asp-validation-for="BuyPrice" class="text-red-500 text-sm"></span>
    </div>

    <!-- Stock -->
    <div class="mb-4">
        <label for="Stock" class="block text-sm font-medium text-gray-700">Stock</label>
        <input type="number" id="Stock" name="Stock" value="@Model.Stock"
               class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
               readonly />
        <span asp-validation-for="Stock" class="text-red-500 text-sm"></span>
    </div>

    <!-- Add Stock -->
    <div class="mb-4">
        <label for="AddStock" class="block text-sm font-medium text-gray-700">Add Stock</label>
        <input type="number" id="AddStock" name="AddStock" value="@Model.AddStock" min="1"
               class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
               required />
        <span asp-validation-for="AddStock" class="text-red-500 text-sm"></span>
    </div>

    <!-- Client Name -->
@*     <div class="mb-4">
        <label for="ClientName" class="block text-sm font-medium text-gray-700">Client Name</label>
        <input type="text" id="ClientName" name="ClientName" value="@Model.ClientName"
               class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
    </div> *@

    <!-- Submit and Back Buttons -->
    <div class="flex justify-between">
        <a href="@Url.Action("ProductList")" class="text-blue-500 hover:text-blue-700">Back to Product List</a>
        <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
            Update Stock
        </button>
    </div>

</form>

@section Scripts {
    <!-- Validation Summary and Input Validation Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.11/dist/jquery.validate.unobtrusive.min.js"></script>
}
