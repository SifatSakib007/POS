        <a href="#">
            Image
        </a>

        <!-- Large screen navigation -->
        <nav class="max-sm:hidden sm:hidden md:hidden lg:flex max-xl:flex ml-auto space-x-6">
              @* <a asp-controller="Home" asp-action="Index" class="hover:text-[#007bff] text-[#007bff] font-semibold block text-[15px]">হোম</a> *@
            <a asp-controller="RegLog" asp-action="Register" class="hover:text-[#007bff] text-[#333] font-semibold block text-[15px]">রেজিস্টার</a>
