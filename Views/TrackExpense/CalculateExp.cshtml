@model POS.Models.Expense

<div class="max-w-3xl mx-auto bg-white p-6 shadow-lg rounded-lg mb-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Track Expense</h2>

    <form asp-action="CalculateExp" method="post" class="space-y-4">
        <div class="flex flex-wrap -mx-3 mb-4">
            <div class="w-full px-3">
                <label asp-for="ExpenseName" class="block text-gray-700">Expense Name</label>
                <input asp-for="ExpenseName" class="mt-1 p-2 border border-gray-300 rounded w-full" />
                <span asp-validation-for="ExpenseName" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="flex flex-wrap -mx-3 mb-4">
            <div class="w-full px-3">
                <label asp-for="Amount" class="block text-gray-700">Amount</label>
                <input asp-for="Amount" type="number" step="0.01" class="mt-1 p-2 border border-gray-300 rounded w-full" />
                <span asp-validation-for="Amount" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="flex flex-wrap -mx-3 mb-4">
            <div class="w-full px-3">
                <label asp-for="Description" class="block text-gray-700">Description</label>
                <textarea asp-for="Description" class="mt-1 p-2 border border-gray-300 rounded w-full"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="flex flex-wrap -mx-3 mb-4">
            <div class="w-full md:w-1/2 px-3">
                <label asp-for="DateStart" class="block text-gray-700">Start Date</label>
                <input asp-for="DateStart" type="date" class="mt-1 p-2 border border-gray-300 rounded w-full" />
                <span asp-validation-for="DateStart" class="text-red-500 text-sm"></span>
            </div>
            <div class="w-full md:w-1/2 px-3">
                <label asp-for="DateEnd" class="block text-gray-700">End Date</label>
                <input asp-for="DateEnd" type="date" class="mt-1 p-2 border border-gray-300 rounded w-full" />
                <span asp-validation-for="DateEnd" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="flex flex-wrap -mx-3 mb-4">
            <div class="w-full px-3">
                <label asp-for="TotalAmount" class="block text-gray-700">Total Amount</label>
                <input asp-for="TotalAmount" type="number" step="0.01" class="mt-1 p-2 border border-gray-300 rounded w-full" />
                <span asp-validation-for="TotalAmount" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="flex justify-end">
            <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Submit Expense</button>
        </div>
    </form>
</div>
